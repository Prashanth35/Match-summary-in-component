<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m" controllerName="bookmycric.results.A1.controller.Results"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout"
	xmlns:u="sap.ui.unified">
	<Page title="Title">
		<content>

			<l:VerticalLayout>
				<l:content>
					<u:CalendarDateInterval id="calendar" days="7"
						width="1280px" select="handleCalendarSelect" />

				</l:content>
			</l:VerticalLayout>



			<l:BlockLayout>
				<l:BlockLayoutRow id="idtile1" width="25%">

					<l:BlockLayoutCell class="blkrow1" width="25%"
						id="idtile2" backgroundColorSet="ColorSet6" backgroundColorShade="ShadeA">

						<VBox>


							<Text text="Feb 19, 2018 ACA-VDCA Cricket Stadium, Visakhapatnam"
								class="name"></Text>


							<l:VerticalLayout class="sapUiTinyMargin">

								<Text text="Tamil Nadu 303/9 (50 ov)" class="sapUiTinyMarginBegin"></Text>
								<Text text="India B 261 (46.1/50 ov)" class="sapUiTinyMarginBegin"></Text>
							</l:VerticalLayout>
							<l:HorizontalLayout class="sapUiTinyMargin">

								<Text text="Tamil Nadu won by 42 runs" class="sapUiTinyMarginBegin"></Text>
							</l:HorizontalLayout>

						</VBox>


						<HBox>

							<Link text="SCORECARD " press="onPress" />
							<Text text="|" class="linkgap" />

							<Link text="REPORT" />

						</HBox>

					</l:BlockLayoutCell>

					<l:BlockLayoutCell class="blkrow12" width="25%"

						backgroundColorSet="ColorSet6" backgroundColorShade="ShadeA">


						<VBox>

							<Text text="Feb 19, 2018 ACA-VDCA Cricket Stadium, Visakhapatnam"
								class="name"></Text>


							<l:VerticalLayout class="sapUiTinyMargin">

								<Text text=" India/9 (50 ov)" class="sapUiTinyMarginBegin"></Text>
								<Text text="SA 261 (46.1/50 ov)" class="sapUiTinyMarginBegin"></Text>
							</l:VerticalLayout>
							<l:HorizontalLayout class="sapUiTinyMargin">

								<Text text="Tamil Nadu won by 42 runs" class="sapUiTinyMarginBegin"></Text>
							</l:HorizontalLayout>

						</VBox>


						<HBox>

							<Link text="SCORECARD " press="onPress" />
							<Text text="|" class="linkgap" />

							<Link text="REPORT" />


						</HBox>

					</l:BlockLayoutCell>


				</l:BlockLayoutRow>

			</l:BlockLayout>

		</content>
	</Page>
</core:View>